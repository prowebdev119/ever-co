{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./src",
		"paths": {
			"@pyro/*": [
				"@pyro/*",
				"../../../node_modules/@ever-platform/common/src/@pyro/*"
			],
			"@modules/server.common/*": [
				"@modules/server.common/*",
				"../../../node_modules/@ever-platform/common/src/*"
			]
		}
	},
	"include": [
		"./src/**/*.d.ts",
		"../../common/**/*d.ts"
	]
}
